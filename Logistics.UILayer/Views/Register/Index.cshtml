
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
@Html.Partial("PartialHead");

<body>




    <h1>Müşteri Kayıt Formu</h1>

    <div class="login">
        <span class="log-close"> </span>
        <div class="login-bottom">
            <form method="post">
                <div class="text">
                    <input type="text" placeholder="Adınızı giriniz.." required="" name="CustomerName" />
                    <span class="men"></span>
                    <div class="clear"> </div>
                </div>
                <div class="text">
                    <input type="text" placeholder="Soyadınızı giriniz.." required="" name="CustomerSurname" />
                    <span class="men"></span>
                    <div class="clear"> </div>
                </div>
                <div class="text">
                    <input type="text" placeholder="Telefon numaranızı giriniz.." required="" name="CustomerPhone" />
                    <span class="men"></span>
                    <div class="clear"> </div>
                </div>
                <div class="text">
                    <input type="text" placeholder="Mail adresinizi giriniz.." required="" name="CustomerMail" />
                    <span class="men"></span>
                    <div class="clear"> </div>
                </div>
                <div class="text">
                    <input type="password" placeholder="Şifrenizi giriniz.." required="" name="CustomerPassword" />
                    <span class="men"></span>
                    <div class="clear"> </div>
                </div>





                @*input type="submit olunca buton olmas özelliği oluyor"*@
                <div class="remember">

                    <div class="send">
                        <input type="submit" value="Kayıt Ol">
                    </div>
                    <div class="clear"> </div>
                </div>
            </form>
        </div>
    </div>
    <div class="copy-right">
        <p>© @DateTime.Now.Year - Müşteri Kayıt Formu. Tüm hakları saklıdır. | Design by  <a href="http://w3layouts.com/" target="_blank">  W3layouts </a></p>
    </div>
</body>
</html>
