@using Logistics.UILayer.Models
@model List<TblCity>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int sayac = 0;


}



<h2>Şehirler</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        sayac = sayac + 1;
        <tr>
            <td>@sayac</td>
            <td>@item.CityName</td>
            <td><a href="/City/DeleteCity/@item.CityID" class="btn btn-danger">Sil</a>   </td>
            <td><a href="/City/UpdateCity/@item.CityID" class="btn btn-success">Güncelle</a>   </td>
        </tr>
    }
</table>

<a href="/City/AddCity/" class="btn btn-primary">Yeni Şehir Girişi</a>




