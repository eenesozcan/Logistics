
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Ekleme Sayfası</h2>

<form method="post">
    <label>Kategori Adı</label>
    <input type="text" class="form-control" name="CategoryName" placeholder="Kategoriyi giriniz" required />
    <br />
    <label>Kategori Durumu</label>
    <select class="form-control" name="CategoryStatus" placeholder="Kategori durumunu giriniz" required>
        <option>True</option>
        <option>False</option>
    </select>






    @*<input type="text" class="form-control" name="CategoryStatus" placeholder="Kategori durumunu giriniz" required />*@
    <br />
    <button class="btn btn-info">Kategori Ekle</button>






</form>     